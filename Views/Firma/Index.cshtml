@model List<Firma>

@{
    ViewData["Title"] = "Firma Yönetimi";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4">
            <i class="fas fa-building"></i> Firma Yönetimi
        </h2>

        @if (User.IsInRole("Admin") || User.IsInRole("Musteri"))
        {
            <div class="mb-3">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Yeni Firma Ekle
                </a>
                <a asp-action="Musteriler" class="btn btn-info">
                    <i class="fas fa-users"></i> Müşteriler
                </a>
                <a asp-action="Tedarikciler" class="btn btn-success">
                    <i class="fas fa-truck"></i> Tedarikçiler
                </a>
            </div>
        }

        <div class="card">
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover" id="firmaTable">
                            <thead>
                                <tr>
                                    <th>Firma Adı</th>
                                    <th>Vergi No</th>
                                    <th>Email</th>
                                    <th>Telefon</th>
                                    <th>Firma Tipi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var firma in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@firma.Ad</strong>
                                        </td>
                                        <td>@firma.VergiNo</td>
                                        <td>@firma.Email</td>
                                        <td>@firma.Telefon</td>
                                        <td>
                                            @switch (firma.FirmaTipi)
                                            {
                                                case FirmaTipi.Musteri:
                                                    <span class="badge bg-primary">Müşteri</span>
                                                    break;
                                                case FirmaTipi.Tedarikci:
                                                    <span class="badge bg-success">Tedarikçi</span>
                                                    break;
                                                case FirmaTipi.HerIkisi:
                                                    <span class="badge bg-info">Her İkisi</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @switch (firma.Durum)
                                            {
                                                case FirmaDurumu.Beklemede:
                                                    <span class="badge status-pending">Beklemede</span>
                                                    break;
                                                case FirmaDurumu.Onaylandi:
                                                    <span class="badge status-approved">Onaylandı</span>
                                                    break;
                                                case FirmaDurumu.Reddedildi:
                                                    <span class="badge status-rejected">Reddedildi</span>
                                                    break;
                                                case FirmaDurumu.Pasif:
                                                    <span class="badge bg-secondary">Pasif</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@firma.Id" class="btn btn-sm btn-info" title="Detaylar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@firma.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <form asp-action="Delete" asp-route-id="@firma.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger btn-delete" title="Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Henüz firma kaydı bulunmamaktadır.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#firmaTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                order: [[0, 'asc']]
            });
        });
    </script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
}
