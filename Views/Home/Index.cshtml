@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="display-4">
            <i class="fas fa-tachometer-alt"></i> Hoş Geldiniz, @User.Identity?.Name!
        </h1>
        <p class="lead">Vendor Portal - Tedarik Zinciri Yönetim Sistemi</p>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-3">
        <div class="card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-primary">Toplam Firma</h5>
                        <h2 class="display-4">@ViewBag.TotalFirmalar</h2>
                        <p class="text-muted">180 Adet Tedarikçi</p>
                    </div>
                    <div>
                        <i class="fas fa-building fa-3x text-primary"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-primary text-white">
                <a href="#" class="text-white text-decoration-none">
                    Detayları Gör <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-success">Bekleyen Tedarikçi</h5>
                        <h2 class="display-4">8</h2>
                        <p class="text-muted">Başvurusu</p>
                    </div>
                    <div>
                        <i class="fas fa-check-circle fa-3x text-success"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-success text-white">
                <a href="#" class="text-white text-decoration-none">
                    Onayları İncele <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-info">Aktif İhale</h5>
                        <h2 class="display-4">@ViewBag.TotalIhaleler</h2>
                        <p class="text-muted">3 Çok Yakında Biliyor</p>
                    </div>
                    <div>
                        <i class="fas fa-gavel fa-3x text-info"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-info text-white">
                <a href="#" class="text-white text-decoration-none">
                    İhaleleri Gör <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5><i class="fas fa-clipboard-list"></i> Onay Bekleyen Siparişler</h5>
            </div>
            <div class="card-body">
                <h2 class="display-4">32</h2>
                <p class="text-muted">Tüm Firmalar</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5><i class="fas fa-chart-line"></i> Toplam Sipariş Kalemi</h5>
            </div>
            <div class="card-body">
                <h2 class="display-4">1,250</h2>
                <p class="text-muted">Bu Ay</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5><i class="fas fa-calendar-alt"></i> Yaklaşan Teslimatlar</h5>
            </div>
            <div class="card-body">
                <h2 class="display-4">7</h2>
                <p class="text-muted">Önümüzdeki Hafta</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5><i class="fas fa-info-circle"></i> Hızlı Erişim</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Siparis" asp-action="SatinAlma" class="btn btn-outline-primary w-100">
                            <i class="fas fa-shopping-cart"></i><br />Satın Alma Siparişleri
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Siparis" asp-action="Satis" class="btn btn-outline-success w-100">
                            <i class="fas fa-box"></i><br />Satış Siparişleri
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Ihale" asp-action="Index" class="btn btn-outline-info w-100">
                            <i class="fas fa-gavel"></i><br />İhale Yönetimi
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a href="#" class="btn btn-outline-warning w-100">
                            <i class="fas fa-file-alt"></i><br />Doküman Yönetimi
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
